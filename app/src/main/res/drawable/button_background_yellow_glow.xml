<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <gradient android:angle="270" android:centerColor="@color/yellow" android:endColor="@color/black" android:startColor="@color/black" />

            <corners android:radius="@dimen/corner_radius" />

            <stroke android:width="@dimen/stroke_width" android:color="@color/yellow_glow" />

        </shape>
    </item>
    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <gradient android:angle="270" android:centerColor="@color/black" android:endColor="@color/yellow" android:startColor="@color/yellow" />

            <corners android:radius="@dimen/corner_radius" />

            <stroke android:width="@dimen/stroke_width" android:color="@color/yellow_glow" />

        </shape>
    </item>
</selector>